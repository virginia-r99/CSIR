@base   <urn:csir:formalisation> .
@prefix csir: <#> .
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:  <http://www.w3.org/2002/07/owl#> .
@prefix xsd:  <http://www.w3.org/2001/XMLSchema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix dct:  <http://purl.org/dc/terms/> .

#################################################################

#################################################################

csir:metric-module a skos:ConceptScheme ;
  dct:title       "CSIR Metric Formalisation (Draft)"@en ;
  dct:description "Metric catalogue (MAP/MRR/nDCG, EAS/Angle/ED, Î”QC/Drifts/PosNegMargin) and values."@en ;
  dct:modified    "2025-09-11"^^xsd:date ;
  dct:hasVersion  "0.1.0" .

#################################################################
# Metric definitions
#################################################################

csir:Metric a rdfs:Class  ;
  rdfs:label "Metric definition"@en .

csir:IRMetric a rdfs:Class  ;
  rdfs:label "IR Metric definition"@en  ;
  rdfs:subClassOf csir:Metric .

csir:MetricDimensionScheme a skos:ConceptScheme  ;
  dct:title "Metric dimensions"@en .

#################################################################
# Metric values
#################################################################

csir:MetricValue a rdfs:Class  ;
  rdfs:label "Metric value"@en ;
  rdfs:subClassOf [ a owl:Restriction ; owl:onProperty prov:wasGeneratedBy ; owl:someValuesFrom csir:Execution ] .

csir:value a owl:DatatypeProperty  ;
  rdfs:label "value"@en  ;
  rdfs:domain csir:MetricValue  ;
  rdfs:range  xsd:decimal .

csir:ofMetric a owl:ObjectProperty  ;
  rdfs:label "is measurement of metric"@en  ;
  rdfs:domain csir:MetricValue  ;
  rdfs:range  csir:Metric .

#################################################################
# Parameters for metric instances
#################################################################

csir:Parameter a rdfs:Class  ;
  rdfs:label "Metric parameter"@en  ;
  rdfs:subClassOf prov:Entity .

csir:hasParameter a owl:ObjectProperty  ;
  rdfs:label "has parameter"@en  ;
  rdfs:domain csir:MetricValue  ;
  rdfs:range  csir:Parameter .

csir:paramName a owl:DatatypeProperty  ;
  rdfs:label "parameter name"@en  ;
  rdfs:domain csir:Parameter  ;
  rdfs:range  xsd:string .

csir:paramValue a owl:DatatypeProperty  ;
  rdfs:label "parameter value"@en  ;
  rdfs:domain csir:Parameter  ;
  rdfs:range  xsd:string .

csir:atK a owl:DatatypeProperty  ;
  rdfs:label "@k"@en  ;
  rdfs:domain csir:MetricValue  ;
  rdfs:range  xsd:integer  ;
  rdfs:subPropertyOf dct:extent .